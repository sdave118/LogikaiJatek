<Window x:Class="PuzzleGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PuzzleGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <ComboBox x:Name="comboBox" Width="120"/>
            <Label x:Name="debug" Content=""/>
            <Button x:Name="Generate" Content="Generate" Width="118" Click="Generate_Click"/>
        </StackPanel>
        <Grid x:Name="matrixGrid" Grid.Column="1"/>
    </Grid>
</Window>
